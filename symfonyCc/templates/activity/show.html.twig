{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activité</h1>

    <div class="container">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description | raw }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_activity_index') }}">Retour à la liste</a>
    <p></p>
    <a class="btn btn-success" href="{{ path('app_activity_edit', {'id': activity.id}) }}">Modifier</a>
    <p></p>
    {{ include('activity/_delete_form.html.twig') }}
    </div>
{% endblock %}
